<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.comcast.g_bradburn.ap_sessionnotes4.MainActivity"
    tools:showIn="@layout/activity_main">

    <!-- On the welcome screen
    Activity bar should be labeled "WelcomeFragment"-->

    <Button
        android:id="@+id/create_button"
        android:layout_width="@dimen/big_button_width"
        android:layout_height="@dimen/welcome_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/welcome_margin"
        android:background="@color/ap_background_red"
        android:text="@string/create_button_text"
        android:textSize="24sp" />

    <Button
        android:id="@+id/open_button"
        android:layout_width="@dimen/big_button_width"
        android:layout_height="@dimen/welcome_height"
        android:layout_below="@+id/create_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/welcome_margin"
        android:background="@color/ap_background_red"
        android:text="@string/open_button_text"
        android:textSize="24sp" />

    <Button
        android:id="@+id/review_button"
        android:layout_width="@dimen/big_button_width"
        android:layout_height="@dimen/welcome_height"
        android:layout_below="@+id/open_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/welcome_margin"
        android:background="@color/ap_background_red"
        android:text="@string/review_button_text"
        android:textSize="24sp" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="@dimen/big_button_width"
        android:layout_height="@dimen/welcome_height"
        android:layout_below="@+id/review_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/welcome_margin"
        android:background="@color/ap_background_red"
        android:text="@string/close_button_text"
        android:textSize="24sp" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="@dimen/big_button_width"
        android:layout_height="@dimen/welcome_height"
        android:layout_below="@+id/close_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/welcome_margin"
        android:background="@color/ap_background_red"
        android:text="@string/delete_button_text"
        android:textSize="24sp" />

</RelativeLayout>

